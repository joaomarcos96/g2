<h2><%= t('general.account') %></h2>

<br>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :current_password %>

  <%= f.submit t('general.update'), class: 'btn btn-primary' %>
<% end %>

<br>

<h3><%= t('general.cancel_my_account') %></h3>

<p>
  <%=
    button_to t('general.cancel_my_account'),
    registration_path(resource_name),
    class: 'btn btn-danger',
    data: {
      confirm: t('general.are_you_sure')
    },
    method: :delete
  %>
</p>

<br>

<%= link_to t('general.back'), :back, class: 'btn btn-info' %>
